<div class="container">

  <h2><b>Gem Listings</b></h2><br>
  <p>Please verify gems availability with our store experts:</p><br>
  <div class="well well-sm" style="background-color: rgb(122, 105, 173);color: #fff;">Gemstone Shapes</div>
  <form action=''>
<div style="margin-left:3rem;">
    <%- Admgemstone::SHAPES.each do |shape| -%>
      <label style="display:inline-block;margin:auto;width:25rem;height:55px;vertical-align:middle;">
        <%= image_tag "#{shape}.png", :style => "width:50px;height:50px;" %>   
        <%= check_box_tag 'shape[]', shape, (params[:shape] && params[:shape].include?(shape)) %>
        <em style="font-size: 1.4rem;"><%= shape.gsub(/\_/," ") %></em>
        <br>
      </label>
    <%- end -%>
</div>
    <br>
    <div class="well well-sm" style="background-color: rgb(122, 105, 173);color: #fff;">Gemstone Type</div>
<div class="text-center" >
     <%- Admgemstone::GEMTYPES.each do |gemtype| -%>
      <label style="display:inline-block;margin:auto;width:25rem;height:55px;vertical-align:middle;">
        <%= check_box_tag 'gemtype[]', gemtype, (params[:gemtype] && params[:gemtype].include?(gemtype)) %>
        <em style="font-size: 1.4rem;"><%= gemtype %></em>
        <br>
      </label>
    <%- end -%>
</div>




    <button type='submit' class="btn btn-info" style="float:right;vertical-align:middle;width: 12rem;margin-right:10rem;">Filter</button>
    <br>
  </form>
  <br><br>

  <div class="table-responsive" style="clear: right;">
  <table class="table table-hover ">
  	<thead>
		<tr>
		<th>ID</th>
		<th>Shape</th>
		<th>Size</th>
		<th>Description</th>
		<th>Color Tone</th>
		<th>Type</th>
		<th>Brand</th>		
		<th style="text-align: right;">Price</th>
		</tr>
	</thead>
	<tbody>
		<% @admgemstonesall.each do |g| %>
			<tr>
				<td style="vertical-align:middle;"><%= g.id %></td>
				<td style="vertical-align:middle;"><%= g.shape.gsub(/\_/," ") %></td>
				<td style="vertical-align:middle;"><%= g.size %></td>
				<td style="vertical-align:middle;"><%= g.description %></td>
				<td style="vertical-align:middle;"><%= g.colortone %></td>
				<td style="vertical-align:middle;"><%= g.gemtype %></td>
				<td style="vertical-align:middle;"><%= g.brand %></td>
				<td style="vertical-align:middle;text-align: right;"><%= g.price %></td>
			<tr>
		<% end %>
	</tbody>
  </table>
</div>
</div>