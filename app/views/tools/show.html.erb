<div class="col-xs-10 col-lg-10">	

		<div class="col-xs-12 col-lg-12">
			<div id="banner001" class="row">
				<div class="thumbnail">
				<%= image_tag "pic2000x200v2.gif", :class => "group list-group-image" %>   
				</div>
			</div>
		<div>

	<div class="col-lg-6">

	<%= image_tag @tool.tool_img.url(:tool_show) %>
	</div>



	<div class="col-lg-6">
		<h4>Category : <i>
			<% if @tool.toolcategory.level3? %>
			<%=  @tool.toolcategory.level1.to_s + " > " + @tool.toolcategory.level2.to_s +  " > " + @tool.toolcategory.level3.to_s %>
			<% elsif @tool.toolcategory.level2? %>
				<%=  @tool.toolcategory.level1.to_s + " > " + @tool.toolcategory.level2.to_s %>
				<% else %>
				<%=  @tool.toolcategory.level1.to_s %>
			<% end %></i>
		</h4><br>
		<h2><span class="label label-primary"><%= @tool.title %></span></h2><br>
		
		<h3><span class="xxxxxxxxxxxx"><%= @tool.short_desc %></span></h3><br>
		<h3>No:<span class="monospaced"><%= @tool.sku %></span></h3><br>

		<% if user_signed_in? %>
		<h3>Price:<span class="monospaced"> $<%= @tool.price %></span></h3><br>
		<% end %>

		<p><span class="description"><%= @tool.long_desc %></span></p><br>
		<h3><u>Specifications</u></h3><br>
		
		<% if @tool.brand? %>
			<div class="col-xs-6"><h4> Brand Name:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.brand %></h4></div>
		<% end %>

		<% if @tool.weight? %>
			<div class="col-xs-6"><h4> Weight:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.weight %></h4></div>
		<% end %>
		<% if @tool.height? %>
			<div class="col-xs-6"><h4> Height:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.height %></h4></div>
		<% end %>

		<% if @tool.width? %>
			<div class="col-xs-6"><h4> Width:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.width %></h4></div>
		<% end %>
		<% if @tool.color? %>
			<div class="col-xs-6"><h4> Color:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.color %></h4></div>
		<% end %>

		<% if @tool.metal? %>
			<div class="col-xs-6"><h4> Metal:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.metal %></h4></div>
		<% end %>
		<% if @tool.whatt? %>
			<div class="col-xs-6"><h4> Whatt:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.whatt %></h4></div>
		<% end %>

		<% if @tool.measuringrange? %>
			<div class="col-xs-6"><h4> Measuring Range:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.measuringrange %></h4></div>
		<% end %>
		<% if @tool.battery? %>
			<div class="col-xs-6"><h4> Battery:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.battery %></h4></div>
		<% end %>
		<% if @tool.usedwith? %>
			<div class="col-xs-6"><h4> Used With:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.usedwith %></h4></div>
		<% end %>

		<% if @tool.depth? %>
			<div class="col-xs-6"><h4> Depth:</h4></div>
			<div class="col-xs-6"><h4><%= @tool.depth %></h4></div>
		<% end %>

		<p>To order <a href="tel:18005551212">please call 1-800-555-1212</a></p>
	</div>


<% if current_user.try(:admin?) %>

	<%= link_to "Back", tools_path %>
	<%= link_to "Edit", edit_tool_path %>
	<%= link_to "Delete", tool_path(@tool), method: :delete, data: { confirm: "Are you sure?"} %>
<% end %>

</div>